{
	"compilerOptions": {
		"target": "ES2024",
		"lib": [
			"ES2024"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"esModuleInterop": true,
    	"skipLibCheck": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}